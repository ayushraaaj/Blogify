<!DOCTYPE html>
<html>
<head>
    <%- include('./partials/head') %>
    <title> Home Page </title>
</head>
<style>
    .card-container{
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
    }
    .card{
        margin: 0px 20px;
        margin-bottom: 20px;
    }
    .buttons{
        display: flex;
    }
    .buttons button{
        margin-left: 20px;
    }
    /* img{
        width: 40px;
        height: 40px;
    } */
</style>
<body>
    <%- include('./partials/nav') %>
    
    <div class="container mt-3 card-container">
        <% blogs.forEach(blog => { %>
            <div class="card" style="width: 18rem;">
                <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%= blog.title %></h5>
                    
                    <div class="buttons">
                        <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                        
                        <% if(locals.user) { %>
                            <form action="/blog/delete/<%= blog._id %>" method="get">
                                <button class="btn btn-primary">Delete</button>
                            </form>
                        <% } %>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>