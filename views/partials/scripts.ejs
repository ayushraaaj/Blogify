<script>
    const togglePassword = document.getElementById('togglePassword');
    togglePassword.addEventListener('change', function(){
        var password = document.getElementById('exampleInputPassword1');

        if(this.checked){
            password.type = 'text';
        }
        else{
            password.type = 'password';
        }
    });
</script>